cabal-version: 2.2
name:
  primitive-pinned
version:
  0.1
synopsis:
  bytearrays where pinnedness is tracked at the type level
description:
  bytearrays where pinnedness is tracked at the type level
homepage:
  https://github.com/haskell-primitive/primitive-pinned
bug-reports:
  https://github.com/haskell-primitive/primitive-pinned/issues
license:
  BSD-3-Clause
license-file:
  LICENSE
author:
  chessai
maintainer:
  chessai <chessai1996@gmail.com>
copyright:
  Â© 2019 chessai
category:
  Data
build-type:
  Simple
extra-doc-files:
    README.md
  , CHANGELOG.md
tested-with:
  GHC == 8.4.4, GHC == 8.6.5, GHC == 8.8.1

library
  hs-source-dirs:
    src
  exposed-modules:
    Data.Primitive.Pinned
  build-depends:
    , base >= 4.11 && < 4.14
    , bytestring >= 0.10 && < 0.11
    , primitive >= 0.7 && < 0.8
    , primitive-foreign >= 0.1 && < 0.2
  ghc-options:
    -Wall
    -O2
  default-language:
    Haskell2010

source-repository head
  type:
    git
  location:
    https://github.com/haskell-primitive/primitive-pinned.git
